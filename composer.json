{
    "name": "oneup/contao-page-teaser",
    "type": "contao-module",
    "description": "Page teaser functionality for Contao Open Source CMS",
    "keywords": [
        "contao",
        "page teaser",
        "teaser",
        "preview",
        "extensions",
        "modules"
    ],
    "homepage": "https://1up.io",
    "license": "MIT",
    "authors": [
        {
            "name": "David Greminger",
            "email": "dg@1up.io",
            "homepage": "https://1up.io",
            "role": "Developer"
        },
        {
            "name": "Jim Schmid",
            "email": "js@1up.io",
            "homepage": "https://1up.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "contao/core-bundle": "^5.3",
        "php-http/guzzle7-adapter": "^1.1"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.13",
        "friendsofphp/php-cs-fixer": "^3.93.0"
    },
    "extra": {
        "contao-manager-plugin": "Oneup\\ContaoPageTeaserBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Oneup\\ContaoPageTeaserBundle\\": "src"
        }
    },
    "prefer-stable": true,
    "support": {
        "email": "hello@1up.io",
        "issues": "https://github.com/1up-lab/contao-page-teaser/issues",
        "slack": "https://contao.slack.com",
        "source": "https://github.com/1up-lab/contao-page-teaser"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": true,
            "contao/manager-plugin": true
        }
    }
}
